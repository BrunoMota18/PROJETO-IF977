<p id="notice"><%= notice %></p>

<h1>Utensilios</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Cpf</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @utensilios.each do |utensilio| %>
      <tr>
        <td><%= utensilio.nome %></td>
        <td><%= utensilio.descricao %></td>
        <td><%= utensilio.cpf %></td>
        <td><%= link_to 'Show', utensilio_path(utensilio, paciente_id: params[:paciente_id])  %></td>
        <td><%= link_to 'Edit', edit_utensilio_path(utensilio, paciente_id: params[:paciente_id]) %></td>
        <td><%= link_to 'Destroy', utensilio_path(utensilio, paciente_id: params[:paciente_id]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Utensilio', new_utensilio_path(paciente_id: params[:paciente_id]) %>
